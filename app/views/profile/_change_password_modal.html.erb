<div id="modal-change-password" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <a type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        <h4 class="modal-title">Change password</h4>
      </div>
      <%= form_tag(profile_change_password_path(format: :json), remote: true, method: :patch, class: 'form-horizontal backtesting_form', id: 'change-password-form') do %>
        <div class="modal-body">
          <div class="validate-error hide form-group">
            <div class="col-xs-offset-1 col-xs-11">
            </div>
          </div>

          <% unless current_user.uses_default_password %>
            <div class="form-group">
              <%= label :current_password, 'Current password', class: 'col-xs-3 control-label' %>
              <div class="col-xs-9">
                <%= password_field_tag :current_password, nil, class: "form-control", autocomplete: :off %>
              </div>
            </div>
          <% end %>

          <div class="form-group">
            <%= label :password, 'Password ', class: 'col-xs-3 control-label' %>
            <div class="col-xs-9">
              <%= password_field_tag :password, nil, class: "form-control"%>
            </div>
          </div>

          <div class="form-group">
            <%= label :password_confirmation, 'Confirm password', class: 'col-xs-3 control-label' %>
            <div class="col-xs-9">
              <%= password_field_tag :password_confirmation, nil, class: "form-control"%>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <%= submit_tag 'Send', class: 'btn btn-primary' %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>