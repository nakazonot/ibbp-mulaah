<%= semantic_form_for @contract, url: admin_buy_tokens_create_path, as: :contract, builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs 'Buy tokens' do %>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :user_email, input_html: { disabled: true, value: User.find(f.object.user_id).email }, label: 'User' %>
    <%= f.input :currency, label: 'Currency', as: :select, collection: Parameter.available_currencies.keys %>
    <%= f.input :coin_amount, label: 'Tokens amount to add' %>
    <%= f.input :coin_price, label: 'Total cost (in selected currency)' %>
    <%= f.input :add_bonus, as: :boolean, label: 'Add bonus' %>
    <%= f.input :description, as: :text, label: 'Description' %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, button_html: { value: 'Add Tokens', 'data-disable-with': 'Add Tokens' } %>
  <% end %>
<% end %>