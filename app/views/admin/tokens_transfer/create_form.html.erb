<%= semantic_form_for @payment, url: admin_tokens_transfer_create_path, as: :payment, builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs 'Tokens Transfer' do %>
    <%= f.input :user_id, as: :hidden %>
    <%= f.input :user_email, input_html: { disabled: true, value: User.find(f.object.user_id).email }, label: 'User' %>
    <%= f.input :coin_amount, label: 'Tokens amount to transfer' %>
    <%= f.input :transaction_id, label: 'Transaction ID' %>
    <%= f.input :description, as: :text, label: 'Description' %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, button_html: { value: 'Tokens Transfer', 'data-disable-with': 'Tokens Transfer' } %>
  <% end %>
<% end %>