<div class="card login-card">
  <div class="card-content text-left">
    <h4 class="title card-title-md">Two-Factor Authentication</h4>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
        <div class="alert card-alert">
          <p>Enter the code from the two-factor app on your mobile device. If you've lost your device, you may enter one of your recovery codes.</p>
        </div>
        <div class="form-group label-floating">
          <%= f.label :otp_attempt, class: 'control-label required' %>
          <%= f.text_field :otp_attempt, class: 'form-control', required: true, autofocus: true, autocomplete: 'off' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Verify code', class: 'btn btn-raised btn-primary wide btn-card-login-submit' %>
        </div>
        <div class="down-box">
          <%= link_to('Back', new_user_session_path) %>
        </div>
    <% end %>
  </div>
</div>
